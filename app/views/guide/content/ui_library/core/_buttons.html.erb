    <div class="sg-content__example">
      <%= code_example('markup') do %>
        <span class="sg-code--inline example">
          <a class="e-btn">default</a>
        </span>
        <span class="sg-code--inline example">
          <a class="e-btn -color-primary">primary</a>
        </span>
        <span class="sg-code--inline example">
          <a class="e-btn -color-secondary">secondary</a>
        </span>
        <span class="sg-code--inline example">
          <a class="e-btn -color-warning">warning</a>
        </span>
        <span class="sg-code--inline example">
          <a class="e-btn -color-destructive">destructive</a>
        </span>
        <span class="sg-code--inline example">
          <a class="e-btn -color-dark">dark</a>
        </span>
        <span class="sg-code--inline example">
          <a class="e-btn -color-muted">muted</a>
        </span>
        <span class="sg-code--inline example">
          <a class="e-btn -color-light">light</a>
        </span>
        <span class="sg-code--inline example">
          <a class="e-btn -color-transparent">transparent</a>
        </span>
      <% end %>
