        <span class="sg-code--inline example">
          <!-- Regular -->
          <span class="e-btn">regular</span>
        </span>

        <span class="sg-code--block example">
          <!-- Full-width -->
          <span class="e-btn -width-full">full width</span>
        </span>
      <% end %>
    </div>
  </section>


  <section class="sg-content__group">
    <h2 id="disabled" class="t-heading -size-m">Disabled</h2>
    <p class="t-body">Buttons can be disabled in a number of ways, lets make sure they look good!</p>

    <div class="sg-content__example">
      <%= code_example('markup') do %>
        <span class="sg-code--block example">
          <a class="e-btn is-disabled">link - class</a>
          <a class="e-btn" data-state="disabled">link - data attribute</a>
          <a class="e-btn" disabled>link - disabled attribute</a>
        </span>

        <span class="sg-code--block example">
          <button class="e-btn is-disabled">button - class</button>
          <button class="e-btn" data-state="disabled">button - data attribute</button>
          <button class="e-btn" disabled>button - disabled attribute</button>
        </span>

        <span class="sg-code--block example">
          <input type="submit" class="e-btn is-disabled" value="input - class">
          <input type="submit" class="e-btn" data-state="disabled" value="input - data attribute">
          <input type="submit" class="e-btn" disabled value="input - disabled attribute">
        </span>

        <span class="sg-code--block example">
          <a class="e-btn--3d is-disabled">link - class</a>
          <a class="e-btn--3d" data-state="disabled">link - data attribute</a>
          <a class="e-btn--3d" disabled>link - disabled attribute</a>
        </span>

        <span class="sg-code--block example">
          <button class="e-btn--3d is-disabled">button - class</button>
          <button class="e-btn--3d" data-state="disabled">button - data attribute</button>
          <button class="e-btn--3d" disabled>button - disabled attribute</button>
        </span>

        <span class="sg-code--block example">
          <input type="submit" class="e-btn--3d is-disabled" value="input - class">
          <input type="submit" class="e-btn--3d" data-state="disabled" value="input - data attribute">
          <input type="submit" class="e-btn--3d" disabled value="input - disabled attribute">
        </span>
      <% end %>
    </div>
  </section>
</div>
