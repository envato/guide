      <!-- Deposit and buy -->
      <div class="e-modal" data-view="modalInternalControls">
        <footer class="e-modal__footer">
          <div class="e-modal__footer-cta -align-left">
            <a href="/checkout/-1" class="js-modal-close e-btn -color-muted">Back</a>
          </div>
