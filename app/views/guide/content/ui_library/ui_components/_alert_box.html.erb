          <p class="t-body -size-m h-remove-margin">You have added this item to your cart. <%= link_to "Go to checkout", "#" %></p>
        </div>
      </div>

      <!-- No icon -->
      <div class="alert-box">
        <div class="alert-box__message">
          <p class="t-body -size-m h-remove-margin">You have added this item to your cart. <%= link_to "Go to checkout", "#" %></p>
        </div>
      </div>

      <!-- With dismiss button -->
      <div class="alert-box">
        <div class="alert-box__icon">
          <i class="e-icon -icon-flag"></i>
        </div>
        <div class="alert-box__message">
          <p class="t-body -size-m h-remove-margin">You have added this item to your cart. <%= link_to "Go to checkout", "#" %></p>
        </div>
        <div  class="alert-box__dismiss">
          <a href="#" class="alert-box__dismiss-icon">
            <i class="e-icon -icon-cancel"></i>
          </a>
        </div>
      </div>


      <!-- Multi-line alert-box -->
      <div class="alert-box">
        <div class="alert-box__icon">
          <i class="e-icon -icon-flag"></i>
        </div>
        <div class="alert-box__message">
          <p class="t-body -size-m">You have added this item to your cart. <%= link_to "Go to checkout", "#" %></p>
          <ul class="t-list -style-decimal">
            <li class="t-body -size-m h-remove-margin">Wow</li>
            <li class="t-body -size-m h-remove-margin">Such alert</li>
            <li class="t-body -size-m h-remove-margin">Very notice</li>
            <li class="t-body -size-m h-remove-margin">So informed</li>
            <li class="t-body -size-m h-remove-margin">Much impressed</li>
          </ul>
        </div>
      </div>
    </div>
  </section>
</div>
