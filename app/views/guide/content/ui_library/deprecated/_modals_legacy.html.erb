                <li>item 8</li>
                <li>item 9</li>
                <li>item 10</li>
                <li>item 11</li>
                <li>item 12</li>
                <li>item 13</li>
                <li>item 14</li>
                <li>item 15</li>
                <li>item 16</li>
                <li>item 17</li>
                <li>item 18</li>
                <li>item 19</li>
                <li>item 20</li>
              </ul>
            </div>
             <footer class="modal__footer">
              Footer
            </footer>
          </div>
        </span>

        <span class="sg-code--block example">
          <!-- Default (no scrollbars) -->
          <div class="modal">
            <header class="modal__header">
              <h2 class="t-heading -size-m">No scrollbars (default)</h2>
            </header>
            <div class="modal__body">
              <ul>
                <li>item 1</li>
