                <li>item 14</li>
                <li>item 15</li>
                <li>item 16</li>
                <li>item 17</li>
                <li>item 18</li>
                <li>item 19</li>
                <li>item 20</li>
              </ul>
            </div>
             <footer class="modal__footer">
              Footer
            </footer>
          </div>
        </span>
      <% end %>
    </div>
  </section>

  <section id="headings" class="sg-content__group">
    <h2 class="t-heading -size-m">Headings</h2>
    <p class="t-body">Modals headings come in two different types (whitelabel and branded)</p>

    <div class="sg-content__example">
      <%= code_example('markup') do %>
        <span class="sg-code--block example">
          <!-- Whitelable heading -->
          <div class="modal">
            <header class="modal__header -theme-market">
              header
            </header>
            <div class="modal__body">
              Body
            </div>
            <footer class="modal__footer">
              Footer
            </footer>
          </div>
        </span>

        <span class="sg-code--block example">
          <!-- Branded heading -->
          <div class="modal">
            <header class="modal__header">
              Envato Market
            </header>
            <div class="modal__body">
              Body
            </div>
            <footer class="modal__footer">
              Footer
            </footer>
          </div>
        </span>

      <% end %>
    </div>
  </section>
</div>
